<a class="navbar-brand" href="<%= !currentUser?'/':'/entries' %>">TrackMyWarranties<sup
        class="text-muted fw-light">BETA</sup></a>
<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
    aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
</button>
<div class="collapse navbar-collapse" id="navbarCollapse">

    <ul class="navbar-nav me-auto mb-2 mb-md-0">
        <% if(!currentUser) {%>
        <li class="nav-item">
            <a class="nav-link<% if(typeof isLoginForm !== 'undefined' && isLoginForm){ %> active<% } %>"
                href="/login">Login</a>
        </li>

        <li class="nav-item">
            <a class="nav-link<% if(typeof isRegisterForm !== 'undefined' && isRegisterForm){ %> active<% } %>"
                href="/register">Register</a>
        </li>

        <li class="nav-item">
            <a class="nav-link<% if(typeof isForgotPasswordForm !== 'undefined' && isForgotPasswordForm){ %> active<% } %>"
                href="/forgotpassword">Forgot Password</a>
        </li>
        <% } else { %>}
        <li class="nav-item">
            <a class="nav-link<% if(typeof isAllEntries !== 'undefined' && isAllEntries){ %> active<% } %>"
                href="/entries">All Warranties</a>
        </li>

        <li class="nav-item">
            <a class="nav-link<% if(typeof isNewEntryForm !== 'undefined' && isNewEntryForm){ %> active<% } %>"
                href="/entries/new">Add New Warranty</a>
        </li>

    </ul>

    <ul class="navbar-nav mb-2 mb-md-0">

        <li class="nav-item">
            <a class="nav-link<% if(typeof isProfile !== 'undefined' && isProfile){ %> active<% } %>"
                href="/user">Profile</a>
        </li>

        <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
        </li>
    </ul>
    <% } %>

