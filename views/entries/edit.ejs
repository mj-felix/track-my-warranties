<% layout('layouts/boilerplate')%>
<h1>Edit Warranty</h1>
<form action="/entries/<%= entry._id %>?_method=PATCH" method="POST">

    <div class="mb-3">
        <label for="productName">Product Name</label>
        <input type="text" id="productName" name="entry[productName]" value="<%= entry.productName %>" required>
    </div>
    <div class="mb-3">
        <label for="datePurchased">Date Purchased</label>
        <input type="date" id="datePurchased" name="entry[datePurchased]"
            value="<%= entry.datePurchased.toISOString().substring(0, 10) %>" required>
    </div>
    <div class="mb-3">
        <label for="dateExpired">Warranty Due Date</label>
        <input type="date" id="dateExpired" name="entry[dateExpired]"
            value="<%= entry.dateExpired.toISOString().substring(0, 10) %>" required>
    </div>
    <div class="mb-3">
        <label for="storeName">Store Name</label>
        <input type="text" id="storeName" name="entry[storeName]" value="<%= entry.storeName %>" required>
    </div>
    <div class="mb-3">
        <label for="additionalComment">Additional Comment</label>
        <textarea type="text" id="additionalComment"
            name="entry[additionalComment]"><%= entry.additionalComment %></textarea>
    </div>
    <button>Save</button>

</form>
<a href="/entries/<%= entry._id %>">Back</a>