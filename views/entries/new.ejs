<% layout('layouts/boilerplate')%>
<div class="container col-lg-6 offset-lg-3" id="mainContainer">
    <%- include('../partials/flash')%>
    <div class="card shadow my-5">
        <div class="card-body">
            <h1 class="card-title">Add New Warranty</h1>

            <form action="/entries" method="POST">

                <div class="mb-3">
                    <label for="productName" class="form-label">Product Name</label>
                    <input type="text" id="productName" class="form-control" name="entry[productName]" required>
                </div>
                <div class="mb-3">
                    <label for="datePurchased" class="form-label">Date Purchased <span
                            class="datePattern"></span></label>
                    <input type="date" id="datePurchased" class="form-control" name="entry[datePurchased]" required
                        pattern="\d{4}-\d{2}-\d{2}">
                </div>
                <div class="mb-3">
                    <label for="dateExpired" class="form-label">Expiry Date <span class="datePattern"></span></label>
                    <input type="date" id="dateExpired" class="form-control" name="entry[dateExpired]" required
                        pattern="\d{4}-\d{2}-\d{2}">
                </div>
                <div class="mb-3">
                    <label for="storeName" class="form-label">Store Name</label>
                    <input type="text" id="storeName" class="form-control" name="entry[storeName]" required>
                </div>
                <div class="mb-3">
                    <label for="additionalComment" class="form-label">Additional Comment <span class="text-muted">(not
                            required)</span></label>
                    <textarea type="text" class="form-control" id="additionalComment"
                        name="entry[additionalComment]"></textarea>
                </div>
                <div class="d-flex justify-content-start align-items-start">
                    <a class="btn btn-primary w-100" href="/entries">Cancel</a>
                    <button class="btn btn-success ms-2 w-100">Save</button>
                </div>

            </form>
        </div>
    </div>
</div>