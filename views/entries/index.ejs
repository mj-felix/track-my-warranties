<% layout('layouts/boilerplate')%>
<div class="my-5 col-lg-8 offset-lg-2">
    <div class="d-flex justify-content-between align-items-start">
        <h1>Warranties</h1>
        <a class="btn btn-outline-primary" href="/entries/new">Add New</a>
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Expiry Date</th>
                    <th>Store Name</th>
                </tr>
            </thead>
            <tbody>
                <% for (let entry of entries){ %>
                <tr>
                    <td class="py-3"><a href="/entries/<%- entry._id %>"><%= entry.productName %></a></td>
                    <td class="py-3"><%= entry.dateExpired.toLocaleDateString() %></td>
                    <td class="py-3"><%= entry.storeName %></td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>