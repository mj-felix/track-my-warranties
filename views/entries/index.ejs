<% layout('layouts/boilerplate')%>
<div class="container col-lg-10 offset-lg-1" id="mainContainer">
    <%- include('../partials/flash')%>
    <div class="my-5">
        <div class="d-flex justify-content-between align-items-start">
            <h1>Warranties</h1>
            <a class="btn btn-outline-primary" href="/entries/new">Add New</a>
        </div>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Expires</th>
                        <th class="onlyDesktop">Store</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let entry of entries){ %>
                    <tr class="<% if(entry.dateExpired < new Date().setUTCHours(0, 0, 0, 0)){ %>text-secondary<% } %>">
                        <td class="py-3"><a
                                class="<% if(entry.dateExpired < new Date().setUTCHours(0, 0, 0, 0)){ %>text-muted<% } %>"
                                href="/entries/<%- entry._id %>"><%= entry.productName %></a></td>
                        <td class="py-3">
                            <time datetime="<%= dateFormat(entry.dateExpired, 'yyyy-mm-dd') %>">
                                <%= dateFormat(entry.dateExpired, 'dd mmm yyyy') %>
                            </time>
                        </td>
                        <td class="py-3 minWidthStoreName onlyDesktop"><%= entry.storeName %></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>