<% layout('layouts/boilerplate')%>
<div class="card shadow my-5">
    <div class="card-body">
        <h1 class="card-title">Edit Profile</h1>
        <form action="/user?_method=PATCH" method="POST">
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-control" id="email" name="email" value="<%= currentUser.username %>"
                    required>
            </div>

            <div class="d-flex justify-content-start align-items-start">

                <a class="btn btn-primary w-100" href="/user">Cancel</a>
                <button class="btn btn-success ms-3 w-100">Save</button>
            </div>
        </form>
    </div>
</div>
<script>
    const colOffsetClasses = 'col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4';
</script>